<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9F9F9F"
    android:orientation="vertical"
    tools:context=".Details">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:elevation="1dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:onClick="BacktoActivity"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/imgBox"
            android:layout_width="match_parent"
            android:layout_height="160sp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/imgbox" />

        <TextView
            style="@style/style_maintext_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Box de Confiserie" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:text="1x Sachet de Tagada, 1x Sachet de Haribo,  1x Sachet d’arlequin "
            android:textColor="#4F4F4F" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/textView5"
            style="@style/style_maintext_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajoutez"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginRight="20sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                style="@style/text_details_one"
                android:text=" Sachet de Tagada" />

            <TextView
                android:id="@+id/textView7"
                style="@style/text_details_two"
                android:text="+0,70€" />

            <ImageView
                android:id="@+id/imageView"
                style="@style/img_details_too"
                app:srcCompat="@drawable/ic_vector" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginRight="20sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtView6"
                style="@style/text_details_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_weight="1"
                android:text=" Sachet de Tagada" />

            <TextView
                android:id="@+id/teiew7"
                style="@style/text_details_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:text="+0,70€"
                android:textAlignment="textEnd" />

            <ImageView
                android:id="@+id/imageew"
                style="@style/img_details_too"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_vector" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginRight="20sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textV"
                style="@style/text_details_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_weight="1"
                android:text=" Sachet de Tagada" />

            <TextView
                android:id="@+id/textView"
                style="@style/text_details_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:text="+0,70€"
                android:textAlignment="textEnd" />

            <ImageView
                android:id="@+id/imageVie"
                style="@style/img_details_too"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_vector" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:rotation="90"
            app:tint="#000000"
            app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/constraint"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="5dp"
        android:background="#F4F4F4"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="40dp">

        <Button
            android:id="@+id/button2"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:backgroundTint="#FFFAFE"
            android:foregroundGravity="center"
            android:text="Ajouter d’autres articles à l’unité "
            android:textColor="#8D5284"
            app:strokeColor="#8D5284"
            app:strokeWidth="1sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#8D5284"
            android:foregroundGravity="center"
            android:singleLine="true"
            android:text="Ajouter au panier" />

        <LinearLayout
            android:id="@+id/spe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                app:srcCompat="@drawable/ic_vector__1_" />

            <LinearLayout
                android:id="@+id/profil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:onClick="openSellerProfil"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    style="@style/maint_text_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mona Lisa "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Je vends des boxs de confiseries originaux  et rare :)" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_baseline_star_24"
                            app:tint="#FFEB3B" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_baseline_star_24"
                            app:tint="#FFEB3B" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_baseline_star_24"
                            app:tint="#FFEB3B" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_baseline_star_24"
                            app:tint="#FFEB3B" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="1 évaluation" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>